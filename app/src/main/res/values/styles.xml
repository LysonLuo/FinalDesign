<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!-- toolbar背景色 -->
        <item name="colorPrimary">@color/toolbar_bg</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/statusbar_bg</item>
        <item name="android:windowBackground">@color/windowbackground_color</item>

        <!-- tint color -->
        <item name="colorAccent">@color/toolbar_bg</item>

    </style>

    <style name="ToolBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- toolbar背景色 -->
        <item name="colorPrimary">@color/toolbar_bg</item>
        <!-- 标题字体颜色 -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- 菜单(字体/按钮)颜色 -->
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>
</resources>
